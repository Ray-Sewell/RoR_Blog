<%= content_for :title do %>
  <h1 class="page_title"><%= @article.title %></h1>
<%end%>
<div class="show_article_container">
  <div class="show_article_render">
    <p class="show_article_body"><%= @article.body %></p>
    <%= link_to 'Delete', @article, method: :delete, data: { confirm: 'Are you sure?' }, class: "show_article_destroy" %>
    <%= link_to 'Edit', edit_article_path(@article), class: "show_article_edit"%>
  </div>
  <div class="show_article_comments">
    <%= render 'comments/form' %>
    <%= render @article.comments %>
  </div>
</div>