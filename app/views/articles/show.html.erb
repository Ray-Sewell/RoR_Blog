<%= content_for :title do %>
  <h1 class="page_title"><%= @article.title %></h1>
<%end%>
<div class="show_article_container">
  <div class="show_article_render">
    <div class="show_article_body"><p><%= @article.body %></p></div>
    <div class="show_article_destroy"><%= link_to 'Delete', @article, method: :delete, data: { confirm: 'Are you sure?' } %></div>
    <div class="show_article_edit"><%= link_to 'Edit', edit_article_path(@article) %></div>
  </div>
  <div class="show_article_comments">
    <%= render 'comments/form' %>
    <%= render @article.comments %>
  </div>
</div>